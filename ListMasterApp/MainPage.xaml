<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:ListMasterApp" x:Class="ListMasterApp.MainPage">
    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="Nossa Lista" 
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand" />
        
        <Entry  Placeholder="Digite aqui..."/>
        
        <Button Text="Checar Lista"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                Clicked="Handle_Clicked" 
                
                />
        
        <Button Text="Adicionar do Campo"
                FontSize="20"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                Margin="20, 10, 20, 20"
                BackgroundColor="Gray"
                TextColor="Black"
                Clicked="Handle_Clicked_2"
                x:Name="valor_digitado"
                />
        
        <Button Text="Adicionar Item"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                Clicked="Handle_Clicked_1" 
                
                />
        
    </StackLayout>
</ContentPage>